{
  "manifest_version": 3,
  "name": "Mangabuff Card Stats",
  "version": "2.0.0",
  "description": "Оптимизированное расширение для статистики карт на Mangabuff. Улучшенная производительность, управление памятью и надёжность.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://mangabuff.ru/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mangabuff.ru/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mangabuff Card Stats v3.0"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["modules/*.js"],
      "matches": ["https://mangabuff.ru/*"]
    }
  ]
}